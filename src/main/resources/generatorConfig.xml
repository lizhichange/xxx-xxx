<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>


    <context id="default" targetRuntime="MyBatis3">

        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <plugin type="org.near.mybatisgenerator.plugins.PaginationPlugin"/>


        <plugin type="org.near.mybatisgenerator.plugins.UnmergeableXmlMappersPlugin"/>

        <plugin type="org.near.mybatisgenerator.plugins.LombokPlugin">


            <!-- enable annotations -->
            <property name="builder" value="true"/>
            <!-- annotation's option(boolean) -->

            <!-- annotation's option(String) -->
            <property name="builder.builderMethodName" value="myBuilder"/>

            <property name="accessors" value="true"/>


            <!-- disable annotations -->
            <property name="allArgsConstructor" value="true"/>


        </plugin>


        <commentGenerator type="org.near.mybatisgenerator.plugins.RemarksDefaultCommentGenerator">
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>

        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/faka"
                        userId="root"
                        password="root"/>


        <javaModelGenerator targetPackage="com.xxx.lz.web.dal.dataobj"
                            targetProject="src/main/java">
            <property name="trimStrings" value="true"/>


            <!-- 格式化java代码 -->
            <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>
            <!-- 格式化XML代码 -->
            <property name="xmlFormatter" value="org.mybatis.generator.api.dom.DefaultXmlFormatter"/>

            <!-- 是否允许子包，即targetPackage.schemaName.tableName -->
            <property name="enableSubPackages" value="false"/>

            <!-- 建立的Model对象是否 不可改变  即生成的Model对象不会有 setter方法，只有构造方法 -->
            <property name="immutable" value="false"/>

            <!-- 是否对类CHAR类型的列的数据进行trim操作 -->
            <property name="trimStrings" value="false"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="sqlmap" targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="com.xxx.lz.web.dal.dao"
                             targetProject="src/main/java" type="XMLMAPPER">

            <property name="enableSubPackages" value=""/>

            <property name="exampleMethodVisibility" value=""/>

            <property name="methodNameCalculator" value=""/>


            <property name="rootInterface" value=""/>
        </javaClientGenerator>


        <table tableName="if_type" mapperName="">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>


    </context>

</generatorConfiguration>